.header{
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid rgb(235, 235, 235);
  margin-top: 20rpx;
  height: 104rpx;
}
.header image{
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
}
.header text{
  font-size: 30rpx;
  margin: 20rpx 0;
  line-height: 64rpx;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 20rpx;
}
.a_image{
  margin: 10rpx 0;
  width: 100%;
  height: 340rpx;
}
.content{
  color: #666;
  font-size: 32rpx;
  text-indent: 32rpx;
  line-height: 40rpx;
}
.a_bottom{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}
.a_bottom image{
  width: 36rpx;
  height: 36rpx;
  margin: 0rpx 10rpx;
}
.a_bottom text{
  color: #666;
  font-size: 30rpx;
  margin-right: 10rpx;
}