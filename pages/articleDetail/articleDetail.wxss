.detailContainer{
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.cover{
  width: 100%;
  height: 100%;
}
.music{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
}
.header{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}
.header image{
  width: 64rpx;
  height: 64rpx;
  margin: 0 20rpx;
}
.header text{
  font-size: 30rpx;
  line-height: 64rpx;
  margin-right: 10rpx;
}
.title{
  margin-left: 30rpx;
  font-size: 34rpx;
  font-weight: 700;
}
.function{
  margin: 30rpx;
  position: relative;
}
.function image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 30rpx;
  float: right;
}
.line{
  background: #eee;
  height: 1rpx;
  position: absolute;
  top: 45rpx;
  width: 100%;
  z-index: -1;
}
.content{
  margin: 30rpx 10rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-indent: 60rpx;
}