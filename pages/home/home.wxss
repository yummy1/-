/**home.wxss**/
.container{
  height: 100%;
  margin: 0px;
  padding: 0px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  height: 320px;
  background-color: rgb(245, 245, 245);
  position: relative
}
.ad{
  width: 100%;
  height: 220px;
  position: absolute;
  background-color: red
}
.logo{
  width: 100%;
  height: 100%
}
.item{
  z-index: 1000;
  position: absolute;
  margin-left: 3%;
  margin-bottom: 8%;
  margin-top: 205px;
  background-color: white;
  width: 94%;
  height: 100px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  box-shadow:0px 1px 5px 1px darkgray;
  border-radius: 5px
}
.itemOne{
  width: 33%;
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;/**内容居中*/
  align-items: center;/**子view垂直居中*/
}
.itemIcon{
  width: 50px;
  height: 50px
}
.itemText{
  color: rgb(50, 50, 50);
  font-size: 15px;
  padding: 8px
}
.news{
  width: 100%;
  height: 200px
}
.newsHeader{
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid rgb(235, 235, 235)
}
.header_left{
  width: 150px;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center
}
.header_right{
  width: 65px;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center
}
.headerIcon_left{
  width: 25px;
  height: 25px;
  margin-left: 10px
}
.headerText_left{
  font-size: 18px;
  font-weight: 600;
  color: rgb(0, 133, 250);
  margin-left: 10px
}
.headerIcon_right{
  width: 10px;
  height: 17px;
  margin-left: 10px
}
.headerText_right{
  color: darkgray;
  font-size: 15px;
  font-weight: 400
}
.newslist{
  width: 100%
}
.newsOne{
  width: 100%;
  height: 120px;
  /* padding: 15px 16px; */
  display: flex;
  flex-direction: row;
  border-bottom: 0.5px solid rgb(235, 235, 235)
}
.newsIcon{
  width: 150px;
  height: 90px;
  padding: 15px 16px;
}
.newsOneRight{
  padding-right: 16px;
  padding-top: 15px;
  height: 90px;
  position: relative
}
.newsTittle{
  color: rgb(50, 50, 50);
  font-size: 16px;
  height: 60px
}
.newsInfo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 0px;
  right: 16px;
  left: 0px
}
.newsInfoLeft{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center
}
.newsInfo text{
  color: darkgray;
  font-size: 14px;
  margin-left: 5px
}
.newsInfo image{
  width: 15px;
  height: 15px
}
.newsLikeIcon{
  margin-left: 15px
}
