/**home.wxss**/
.container{
  height: 100%;
  margin: 0rpx;
  padding: 0rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  height: 640rpx;
  background-color: rgb(245, 245, 245);
  position: relative
}
.ad{
  width: 100%;
  height: 440rpx;
  position: absolute
}
.logo{
  width: 100%;
  height: 100%
}
.item{
  z-index: 1000;
  position: absolute;
  margin-left: 3%;
  margin-bottom: 8%;
  margin-top: 410rpx;
  background-color: white;
  width: 94%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  box-shadow:0px 2rpx 10rpx 2rpx darkgray;
  border-radius: 10rpx
}
.itemOne{
  width: 33%;
  height: 210rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;/**内容居中*/
  align-items: center;/**子view垂直居中*/
}
.itemIcon{
  width: 100rpx;
  height: 100rpx;
  padding-top: 10rpx
}
.itemText{
  color: rgb(50, 50, 50);
  font-size: 30rpx;
  padding: 16rpx
}
.news{
  width: 100%;
  height: 400rpx
}
.newsHeader{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2rpx solid rgb(235, 235, 235)
}
.header_left{
  width: 300rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center
}
.header_right{
  width: 130rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center
}
.headerIcon_left{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx
}
.headerText_left{
  font-size: 36rpx;
  font-weight: 600;
  color: rgb(0, 133, 250);
  margin-left: 20rpx
}
.headerIcon_right{
  width: 20rpx;
  height: 34rpx;
  margin-left: 20rpx
}
.headerText_right{
  color: darkgray;
  font-size: 30rpx;
  font-weight: 400
}
.newslist{
  width: 100%
}
.newsOne{
  width: 100%;
  height: 240rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid rgb(235, 235, 235)
}
.newsIcon{
  width: 35%;
  height: 180rpx;
  margin: 30rpx 32rpx;
}
.newsOneRight{
  margin-right: 32rpx;
  margin-top: 30rpx;
  height: 180rpx;
  width: 65%;
  position: relative
}
.newsTittle{
  color: rgb(50, 50, 50);
  font-size: 34rpx;
  height: 95rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.newsInfo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  left: 0rpx
}
.newsInfoLeft{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center
}
.newsInfo text{
  color: darkgray;
  font-size: 28rpx;
  margin-left: 10rpx
}
.newsInfo image{
  width: 30rpx;
  height: 30rpx
}
.newsLikeIcon{
  margin-left: 30rpx
}
