.movieContainer{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee
}
.movieCoverIcon{
  margin-right: 20rpx;
  width: 128rpx;
  height: 128rpx
}
.info{
  display: flex;
  flex-direction: column;
  width:70%;
}
.name{
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.year{
  font-size: 24rpx;
  color: #666;
  margin: 14rpx 0;
}
.director{
  font-size: 24rpx;
}
.score{
  color: red;
  font-weight: 700;
}